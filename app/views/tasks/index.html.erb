<h1>Tasks Lists</h1>

<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %></li>
  <p><%= link_to "Edit this task", edit_task_path(task) %></p>
  <p><%= link_to "Delete this task", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this task?" } %></p>
<% end %>
</ul>

<p><%= link_to "Create a new task", new_path %></p>
